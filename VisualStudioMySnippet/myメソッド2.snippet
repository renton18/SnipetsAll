<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>共通初期設定(Form_Load)</Title>
      <Shortcut>myメソッド</Shortcut>
    </Header>
    <Snippet>
      <Code Language="cSharp">
        <![CDATA[#region 共通初期設定
            ////////////////////////////////////////////////////////////////////////////////
            // 共通初期設定
            ////////////////////////////////////////////////////////////////////////////////
            //INIファイル読込む
            if (COMMON.SetConfig() == false)
            {
                this.Close();
                return;
            }
            //ステータスバーを表示する
            COMMON.SetForm(this);
            //EXEワーキングフォルダの設定
            Directory.SetCurrentDirectory(Application.StartupPath);
            #endregion
            ////////////////////////////////////////////////////////////////////////////////
            // その他初期設定
            ////////////////////////////////////////////////////////////////////////////////
            SQLSERVERHelper.logConnection = COMMON.TRUSTConnection;
#if DEBUG == true
#endif]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
